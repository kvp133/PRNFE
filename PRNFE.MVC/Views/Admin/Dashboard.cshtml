@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-shield-alt me-2"></i>
                        Admin Dashboard
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body text-center p-4">
                                    <div class="mb-3">
                                        <i class="fas fa-users-cog fa-4x text-primary"></i>
                                    </div>
                                    <h5 class="card-title">Quản trị người dùng</h5>
                                    <p class="card-text text-muted">
                                        Quản lý danh sách người dùng, khóa/mở khóa tài khoản, đặt lại mật khẩu
                                    </p>
                                    <a href="@Url.Action("UserManagement", "Admin")" class="btn btn-primary btn-lg">
                                        <i class="fas fa-arrow-right me-2"></i>
                                        Truy cập
                                    </a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body text-center p-4">
                                    <div class="mb-3">
                                        <i class="fas fa-key fa-4x text-warning"></i>
                                    </div>
                                    <h5 class="card-title">Quản trị quyền</h5>
                                    <p class="card-text text-muted">
                                        Quản lý vai trò, phân quyền và map quyền cho người dùng
                                    </p>
                                    <a href="@Url.Action("adminpanel", "Admin")" class="btn btn-warning btn-lg">
                                        <i class="fas fa-arrow-right me-2"></i>
                                        Truy cập
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.card:hover {
    transform: translateY(-5px);
    transition: transform 0.3s ease;
}

.btn-lg {
    padding: 12px 30px;
    font-size: 1.1rem;
}
</style> 