@model ForgotPasswordRequest
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="auth-container bg-decoration">
    <div class="auth-card">
        <a href="@Url.Action("Login", "Auth")" class="back-link">
            <i class="fas fa-arrow-left"></i>
            Quay lại đăng nhập
        </a>

        <div class="glass-card p-4" id="forgotPasswordCard">
            <div class="text-center mb-4">
                <div class="auth-logo">
                    <i class="fas fa-building"></i>
                </div>
                <h2 class="auth-title">Quên mật khẩu?</h2>
                <p class="auth-subtitle">Nhập email của bạn để nhận hướng dẫn đặt lại mật khẩu</p>
            </div>

            <form method="post" asp-action="ForgotPassword">
                <div class="input-group-glass">
                    <i class="fas fa-envelope input-icon"></i>
                    <input type="email" asp-for="Email" class="form-control glass-input" placeholder="your@email.com" required>
                </div>
                <button type="submit" class="btn btn-gradient w-100 mb-3" id="resetBtn">
                    Gửi hướng dẫn đặt lại
                </button>
            </form>
            
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="mt-3">
                    <div class="alert @(ViewBag.IsSuccess ? "alert-success" : "alert-danger")">@ViewBag.Message</div>
                </div>
            }
            
            <div class="text-center text-muted small">
                Nhớ lại mật khẩu?
                <a href="@Url.Action("Login", "Auth")" class="text-decoration-none fw-medium" style="color: #ec4899;">
                    Đăng nhập ngay
                </a>
            </div>
        </div>

        @if (ViewBag.IsSuccess == true)
        {
            <div class="glass-card p-4" id="successCard">
                <div class="text-center mb-4">
                    <div class="auth-logo" style="background: linear-gradient(135deg, #10b981, #059669);">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h2 class="auth-title">Email đã được gửi!</h2>
                    <p class="auth-subtitle">Chúng tôi đã gửi hướng dẫn đặt lại mật khẩu đến email của bạn</p>
                </div>

                <div class="text-center mb-4">
                    <p class="text-muted mb-2">Vui lòng kiểm tra hộp thư đến (và cả thư mục spam) của email:</p>
                    <p class="fw-medium text-dark">@ViewBag.Email</p>
                </div>

                <div class="d-grid gap-2">
                    <a href="@Url.Action("ForgotPassword", "User")" class="btn btn-outline-glass">
                        Gửi lại email
                    </a>
                    <a href="@Url.Action("Login", "Auth")" class="btn btn-gradient">
                        Quay lại đăng nhập
                    </a>
                </div>
            </div>
        }
    </div>
</div> 