@model ResidentRequest
@{
    ViewData["Title"] = "Quản lý cư dân";
}

<div class="auth-container bg-decoration">
    <div class="auth-card">
        <a href="/" class="back-link">
            <i class="fas fa-arrow-left"></i>
            Về trang chủ
        </a>

        <div class="glass-card p-4">
            <div class="text-center mb-4">
                <div class="auth-logo">
                    <i class="fas fa-users"></i>
                </div>
                <h2 class="auth-title">Quản lý cư dân</h2>
                <p class="auth-subtitle">Thêm cư dân mới vào hệ thống</p>
            </div>

            <form method="post" asp-action="Manager">
                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group-glass">
                            <i class="fas fa-user input-icon"></i>
                            <input type="text" class="form-control glass-input" asp-for="FullName" placeholder="Họ và tên" required>
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group-glass">
                            <i class="fas fa-id-card input-icon"></i>
                            <input type="text" class="form-control glass-input" asp-for="IdentityNumber" placeholder="CMND/CCCD" required>
                            <span asp-validation-for="IdentityNumber" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group-glass">
                            <i class="fas fa-calendar input-icon"></i>
                            <input type="date" class="form-control glass-input" asp-for="BirthDate" required>
                            <span asp-validation-for="BirthDate" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group-glass">
                            <i class="fas fa-venus-mars input-icon"></i>
                            <select class="form-control glass-input" asp-for="Gender" required>
                                <option value="">Chọn giới tính</option>
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                                <option value="Khác">Khác</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group-glass">
                            <i class="fas fa-phone input-icon"></i>
                            <input type="tel" class="form-control glass-input" asp-for="PhoneNumber" placeholder="Số điện thoại" required>
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group-glass">
                            <i class="fas fa-envelope input-icon"></i>
                            <input type="email" class="form-control glass-input" asp-for="Email" placeholder="Email" required>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="input-group-glass">
                    <i class="fas fa-map-marker-alt input-icon"></i>
                    <input type="text" class="form-control glass-input" asp-for="PermanentAddress" placeholder="Địa chỉ thường trú" required>
                    <span asp-validation-for="PermanentAddress" class="text-danger small"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group-glass">
                            <i class="fas fa-user-tag input-icon"></i>
                            <select class="form-control glass-input" asp-for="ResidentType" required>
                                <option value="">Loại cư dân</option>
                                <option value="Chính chủ">Chính chủ</option>
                                <option value="Thuê">Thuê</option>
                            </select>
                            <span asp-validation-for="ResidentType" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group-glass">
                            <i class="fas fa-door-open input-icon"></i>
                            <select class="form-control glass-input" asp-for="RoomId" required>
                                <option value="">Chọn phòng</option>
                                <!-- TODO: Load rooms from API -->
                            </select>
                            <span asp-validation-for="RoomId" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-gradient w-100 mb-3">
                    <i class="fas fa-user-plus me-2"></i>
                    Thêm cư dân
                </button>
            </form>

            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="mt-3">
                    <div class="alert @(ViewBag.IsSuccess ? "alert-success" : "alert-danger")">
                        <i class="fas @(ViewBag.IsSuccess ? "fa-check-circle" : "fa-exclamation-triangle") me-2"></i>
                        @ViewBag.Message
                    </div>
                </div>
            }
        </div>
    </div>
</div>
