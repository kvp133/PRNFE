@model List<PRNFE.MVC.Models.Response.BuildingResponse>
@{
    ViewData["Title"] = "Chọn trọ quản lý";
}
<div class="container mt-5">
    <h2>Chọn trọ bạn muốn quản lý</h2>
    <form asp-action="SelectBuilding" method="post">
        <div class="list-group mt-4">
            @foreach (var building in Model)
            {
                <label class="list-group-item">
                    <input type="radio" name="buildingId" value="@building.Id" required />
                    <strong>@building.Name</strong> - @building.Address
                </label>
            }
        </div>
        <button type="submit" class="btn btn-primary mt-3">Tiếp tục</button>
       
    </form>
    <div>
        <div class="col-md-4">
            <a href="/Building/Index" class="card text-center shadow-sm p-4" style="text-decoration:none;">
                <div class="card-body">
                    <i class="fas fa-bolt fa-3x mb-2"></i>
                    <h4>Quản lý tòa nhà</h4>
                </div>
            </a>
        </div>
    </div>
</div>
@if (TempData["Message"] != null && (Model == null || !Model.Any()))
{
    <div class="alert alert-danger mt-3">@TempData["Message"]</div>
} 