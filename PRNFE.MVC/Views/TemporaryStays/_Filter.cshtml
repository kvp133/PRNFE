@model PRNFE.MVC.Models.Request.FilterTemporaryStayDto
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" id="filterTempoForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                 <label asp-for="RoomIds" class="control-label"></label>
                <select asp-for="RoomIds" multiple asp-items="@ViewBag.Rooms" class="form-select select-2 mb-3" style="width: 100%;">
                    <option selected disabled>Chọn phòng</option>
                </select>
             </div>

            <div class="form-group">
                <label asp-for="ResidentIds" class="control-label"></label>
                <select asp-for="ResidentIds" multiple asp-items="@ViewBag.Residents" class="form-select select-2 mb-3" style="width: 100%;">
                    <option selected disabled>Chọn cư dân</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<FilterTemporaryStayDto.TemporaryStayStatus>()" class="form-control mb-3">
                    <option value="">Chọn trạng thái</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="col-12 mt-3 mb-3 d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-primary px-4">🔍 Tìm kiếm</button>
                <button type="reset" class="btn btn-danger px-4">Reset</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
