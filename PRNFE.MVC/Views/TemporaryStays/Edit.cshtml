@model PRNFE.MVC.Models.Request.UpdateTemporaryStayDto

@{
    ViewData["Title"] = "Edit";
}

<style>
    body {
        background-color: #ffe6f0; /* pink */
        font-family: 'Segoe UI', sans-serif;
    }

    h1 {
        color: #99004d;
    }

    form {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .btn-primary {
        background-color: #cc005f;
        border-color: #cc005f;
    }

        .btn-primary:hover {
            background-color: #99004d;
            border-color: #99004d;
        }

    a {
        color: #cc005f;
        font-weight: 500;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<h1>Update Temporary Sta</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FromDate" class="control-label"></label>
                <input asp-for="FromDate" type="date" class="form-control" />
                <span asp-validation-for="FromDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ToDate" class="control-label"></label>
                <input asp-for="ToDate" type="date" class="form-control" />
                <span asp-validation-for="ToDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<PRNFE.MVC.Models.Request.UpdateTemporaryStayDto.TemporaryStayStatus>()" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
